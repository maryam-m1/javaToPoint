<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">

    <!-- 
        These are "File-level" checks and MUST be directly under Checker. 
        They check the input file, not the Java code structure (AST).
    -->
    <module name="JavadocPackage"/>
    <module name="LineLength">
        <property name="max" value="120"/>
    </module>

    <!-- 
        These are "Code-level" checks (AST checks) and MUST be inside TreeWalker. 
        They analyze the actual Java source code structure.
    -->
    <module name="TreeWalker">
        
        <!-- Check for proper class naming conventions -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Check for proper variable naming conventions -->
        <module name="LocalVariableName"/>
        <module name="MemberName"/>

        <!-- Enforce the use of braces for control statements -->
        <module name="NeedBraces"/>

        <!-- Checks for import statements, such as unused imports -->
        <module name="UnusedImports"/>
    </module>
</module>